{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ProxyOptions": {
    "MaxBodyBytes": 1048576,
    "AllowedHeaders": [ "Authorization", "Content-Type", "Accept", "X-Target-Base", "X-Correlation-Id", "X-Executor-Type", "Accept", "Connection", "Accept-Encoding", "User-Agent", "Host", "Postman-Token", "Content-Length" ],
    "DefaultTimeoutMs": 30000,
    "Retry": {
      "MaxAttempts": 3,
      "BaseDelayMs": 100,
      "MaxDelayMs": 2000,
      "JitterPct": 0.2
    }
  }
}
