{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Console": {
    "FormatterName": "json",
    "FormatterOptions": {
      "IncludeScopes": true,
      "UseUtcTimestamp": true,
      "TimestampFormat": "O"
    }
  },
  "AllowedHosts": "*",
  "ProxyOptions": {
    "MaxBodyBytes": 1048576,
    "AllowedHeaders": [ "Authorization", "Content-Type", "Accept", "X-Target-Base", "X-Correlation-Id", "X-Executor-Type", "Accept" ],
    "DefaultTimeoutMs": 30000,
    "Retry": {
      "MaxAttempts": 3,
      "BaseDelayMs": 100,
      "MaxDelayMs": 2000,
      "JitterPct": 0.2
    }
  }
}
